<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context=".view.ListPdv">

    <include
            android:id="@+id/toolbar"
            layout="@layout/app_toolbar" />
    <Button
            android:text="@string/add_new_pdv"
            android:textColor="@color/white"
            android:background="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/list_pdv_recycler"
            app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
            android:id="@+id/btn_new_pdv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list_pdv_recycler"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_new_pdv"
            app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <include
            android:id="@+id/bottom_navigation"
            layout="@layout/navigation_bottom_view" />



</androidx.constraintlayout.widget.ConstraintLayout>